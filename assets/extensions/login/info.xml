<?xml version="1.0" encoding="ISO-8859-1" ?>
<afmExtension>
  <extension name="Simple Login" version="1.0.0.0" requires="1.0.0.0">
	  <description>
		  A simple login widget for the system.
	  </description>
	  <code name="login.php" class="LoginWidget">
		  <settings>
            <setting name="login_image" value="{path}images/login.png"/>
            <setting name="show_welcome" value="true"/>
		  </settings>
	  </code>
	  <author name="AFM Software" website="www.afmsoftware.com"></author>
  </extension>
</afmExtension>
